<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:fx="http://ns.adobe.com/mxml/2009" horizontalAlign="center" verticalAlign="middle" paddingTop="20" paddingBottom="20" verticalGap="20" 
		 xmlns:s="library://ns.adobe.com/flex/spark" backgroundColor="#333333" borderStyle="solid" borderColor="#777777" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="450" height="500"
		 >
	<fx:Declarations>
		
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
			
			[Bindable]
			private var _image:Bitmap;
			
			
			public function set previewBitmap(value:Bitmap):void
			{
				_image = value;
			}
			
			protected function button1_clickHandler(event:MouseEvent):void
			{
				PopUpManager.removePopUp(this);
			}
			
		]]>
	</fx:Script>
	<mx:HBox height="400" width="400"
			 paddingBottom="20" paddingLeft="20" paddingRight="20" paddingTop="20"
			 borderStyle="solid" borderColor="#ffffff">		
		<mx:HBox backgroundColor="#ffffff" width="100%" height="100%">
			<mx:Image id="previewImage" source="{_image}" height="100%" width="100%" smoothBitmapContent="true"/>
		</mx:HBox>
	</mx:HBox>
	<mx:Button label="Close" click="button1_clickHandler(event)"/>
</mx:VBox>
